@model IEnumerable<NubeSalesMVC.Models.Pagar>
@{
    ViewData["Title"] = "Relatorio de contas a pagar";
}

<h2>@ViewData["Title"]</h2>

<div class="panel panel-primary">
    <div class="panel-heading">
        <h3 class="panel-title">Total = @Model.Sum(obj => obj.Valor).ToString("C")</h3>
    </div>
    <div class="panel-body">
        <table class="table table-striped table-hover">
            <thead>
                <tr class="success">
                    <th>
                        @Html.DisplayNameFor(model => model.PessoaId)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.CategoriaId)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DtaMovimento)
                    </th>
                    <th style="text-align: right">
                        @Html.DisplayNameFor(model => model.Valor)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.IdTipo)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Observacao)
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr style="font-size:smaller">
                    <td>
                        @Html.DisplayFor(modelItem => item.Pessoa.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Categoria.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DtaMovimento)
                    </td>
                    <td style="text-align: right">
                       R$ @Html.DisplayFor(modelItem => item.Valor)
                    </td>
                    <td>
                        @{
                            ViewData["Tipo"] = item.CarregaSituacao(item.IdTipo);
                        }
                        @ViewData["Tipo"]
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Observacao)
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>