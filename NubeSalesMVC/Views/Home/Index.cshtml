@{
    ViewData["Title"] = "Home Page";
}
<h2>Principais Ações</h2>
<div class="col-lg-12">
    <div class="list-group col-lg-4">

        <div>
            <a class="btn btn-link" asp-action="Create" asp-controller="Pessoas">Novo cliente/credor</a>
        </div>
        <div>
            <!-- Contas a Receber -->
            <div class="btn-group dropright">
                <button type="button" class="btn btn-link dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    Nova conta a receber
                </button>
                <div class="dropdown-menu">
                    <a class="btn btn-link" asp-action="Create" asp-route-id="0" asp-controller="Recebers">Contratos</a>
                    <a class="btn btn-link" asp-action="Create" asp-route-id="1" asp-controller="Recebers">Serviços</a>
                    <a class="btn btn-link" asp-action="Create" asp-route-id="2" asp-controller="Recebers">Licenças</a>
                    <a class="btn btn-link" asp-action="Create" asp-route-id="3" asp-controller="Recebers">Hardware</a>
                    <a class="btn btn-link" asp-action="Create" asp-route-id="4" asp-controller="Recebers">Comissões</a>
                </div>
            </div>
        </div>
        <div>
            <!-- Contas a Pagar -->
            <div class="btn-group dropright">
                <button type="button" class="btn btn-link dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                    Nova conta a pagar
                </button>
                <div class="dropdown-menu">
                    <a class="btn btn-link" asp-action="Create" asp-route-id="0" asp-controller="Pagars">Despesa fixa</a>
                    <a class="btn btn-link" asp-action="Create" asp-route-id="1" asp-controller="Pagars">Despesa variável</a>
                </div>
            </div>
        </div>
    </div>
</div>
