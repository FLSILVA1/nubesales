@model NubeSalesMVC.Models.ViewModels.PagarFormViewModel
@{
    ViewData["Title"] = "Edit";
}

<h2>Editar</h2>

<h4>Conta a Pagar</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Pagar.Id" />
            <div class="form-group">
                <label asp-for="Pagar.PessoaId" class="control-label"></label>
                <select asp-for="Pagar.PessoaId" asp-items="@(new SelectList(Model.Pessoas,"Id","Name"))" class="form-control"></select>
                <span asp-validation-for="Pagar.PessoaId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Pagar.DtaMovimento" class="control-label"></label>
                <input asp-for="Pagar.DtaMovimento" class="form-control" />
                <span asp-validation-for="Pagar.DtaMovimento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Pagar.Valor" class="control-label"></label>
                <input asp-for="Pagar.Valor" class="form-control" autocomplete="off" />
                <span asp-validation-for="Pagar.Valor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Pagar.Observacao" class="control-label"></label>
                <input asp-for="Pagar.Observacao" class="form-control" />
                <span asp-validation-for="Pagar.Observacao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Pagar.CategoriaId" class="control-label"></label>
                <select asp-for="Pagar.CategoriaId" asp-items="@(new SelectList(Model.Categorias,"Id","Name"))" class="form-control"></select>
                <span asp-validation-for="Pagar.CategoriaId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Pagar.IdTipo" class="control-label"></label>
                <select asp-for="Pagar.IdTipo" class="form-control" asp-items=ViewBag.ListaSituacao></select>
                <span asp-validation-for="Pagar.IdTipo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-default" />
            </div>
        </form>
    </div>

</div>


<div>
    <a asp-action="FilteredIndex">Voltar a lista</a>
</div>
