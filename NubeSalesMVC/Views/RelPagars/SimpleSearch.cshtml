@model IEnumerable<NubeSalesMVC.Models.Pagar>
@{
    ViewData["Title"] = "Relatorio de contas a pagar";
}

<h2>@ViewData["Title"]</h2>

<nav class="navbar navbar-inverse">
    <div class="container-fluid">
        <form class="navbar-form navbar-left" role="search">
            <div class="form-group">
                <label for="minDate">Data Inicial</label>
                <input type="date" class="form-control" name="minDate" value="@ViewData["minDate"]"/>
            </div>
            <div class="form-group">
                <label for="maxDate">Data Final</label>
                <input type="date" class="form-control" name="maxDate" value="@ViewData["maxDate"]" />
            </div>
            <button type="submit" class="btn btn-primary">Filtrar</button>
        </form>
    </div>
</nav>
<div class="panel panel-primary">
    <div class="panel-heading">
        <h3 class="panel-title">Total = @Model.Sum(obj => obj.Valor).ToString("F2")</h3>
    </div>
    <div class="panel-body">
        <table class="table table-striped table-hover">
            <thead>
                <tr class="success">
                    <th>
                        @Html.DisplayNameFor(model => model.PessoaId)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.IdTipoDespesa)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DtaMovimento)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Valor)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.IdTipo)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Observacao)
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Pessoa.Name)
                    </td>
                    <td>
                        @{
                            ViewData["TipoDespesa"] = item.CarregaTipoDespesa(item.IdTipoDespesa);
                        }
                        @ViewData["TipoDespesa"]
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DtaMovimento)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Valor)
                    </td>
                    <td>
                        @{
                            ViewData["Tipo"] = item.CarregaSituacao(item.IdTipo);
                        }
                        @ViewData["Tipo"]
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Observacao)
                    </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>