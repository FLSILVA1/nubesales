                <input name="idFinPagar" type="checkbox" value="@ViewData["idFinPagar"]">
                <span class="slider round"></span>
            </label>
            <label for="idFinReceber" class="control-label">Clientes</label>
            <label class="switch">
                <input name="idFinReceber" type="checkbox" value="@ViewData["idFinReceber"]">
                <span class="slider round"></span>
            </label>
            <button type="submit" class="btn btn-primary">Filtrar</button>
        </form>
        
